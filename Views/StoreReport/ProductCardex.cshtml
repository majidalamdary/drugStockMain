<div class="container-fluid">
    <a target="_blank" href="@Url.Action("Print" ,new { id= @ViewBag.ProductId})" style="margin-right: 15px;" class="btn btn-success mb-3"><i class="fa fa-print"></i> چاپ لیست</a>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3 class="card-title text-white">کاردکس @ViewBag.ProductTitle</h3>
                </div>
                <div id="StockBalanceList">
                    <div class="card-body p-0">
                        <table class="table table-striped table-responsive-sm text-center">
                            <thead>
                                <tr>
                                    <th>شماره سریال</th>
                                    <th>تاریخ</th>
                                    <th>توضیح</th>
                                    <th>تعداد</th>
                                    <th>مانده</th>

                                </tr>
                            </thead>
                            <tbody>
                                @for (int i=Model.Count-1;i>=0;i--)
                                {
                                    <tr>
                                        <td>
                                            @if (Model[i].Type == "Receipt")
                                            {
                                                <a style="color: blue" href="@Url.Action("CreateStoreReceipt", "StoreReceipt",new {id = Model[i].ReferenceId})">@Model[i].Sanad</a>
                                            }
                                            @if (Model[i].Type == "Invoice")
                                            {
                                                <a style="color: blue" href="@Url.Action("CreateInvoice", "Invoice",new {id = Model[i].ReferenceId})">@Model[i].Sanad</a>
                                            }
                                            @if (Model[i].Type == "ReturnReceipt")
                                            {
                                                <a style="color: blue" href="@Url.Action("ReturnStoreReceipt", "StoreReceipt",new {id = Model[i].ReferenceId})">@Model[i].Sanad</a>
                                            }
                                        </td>
                                        <td>@Model[i].Date.ToShamsi(PersianDateTimeFormat.Date)</td>

                                        <td>@(Model[i].Description+" ("+ Model[i].ActionType+")" )</td>
                                        <td style="color: @((Model[i].ActionType == "ورود")?"green":"red")" >@Model[i].Count</td>
                                        <td>@Model[i].Remainig</td>
                                        <td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-center">
                            <nav class="table-responsive">
                                <ul class="pagination justify-content-center d-flex flex-wrap">


                                    @if (ViewBag.Page > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" onclick="SearchProductBalance(1)">اولین</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" onclick="SearchProductBalance(@(ViewBag.Page - 1))">قبلی</a>
                                        </li>
                                    }

                                    @for (int i = 1; i <= ViewBag.PageCount; i++)

                                    {
                                        <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                            <a class="page-link" onclick="SearchProductBalance(@i);">@i</a>
                                        </li>
                                    }

                                    @if (ViewBag.Page < ViewBag.PageCount)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" onclick="SearchProductBalance(@(ViewBag.Page + 1))">بعدی</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" onclick="SearchProductBalance(@(ViewBag.PageCount))">آخرین</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>


                    </div>

                </div>

                <!-- /.card-body -->

            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row (main row) -->
</div>

<div>

</div>
