<script language="javascript">

    $("#FactorDateFrom").persianDatepicker({
        formatDate: "YYYY/MM/DD",
        cellWidth: 40,
        cellHeight: 40,
        fontSize: 12,
        selectedBefore: 1
    });
    $("#FactorDateFrom").val("");
    $("#FactorDateTo").persianDatepicker({
        formatDate: "YYYY/MM/DD",
        cellWidth: 40,
        cellHeight: 40,
        fontSize: 12,
        selectedBefore: 1
    });
    $("#FactorDateTo").val("");

    $('#BusinnessPartnerId').select2({
        allowClear: true
    });



</script>

