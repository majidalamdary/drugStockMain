@model List<DrugStockWeb.Models.Invoice.Invoice>

@{
    ViewBag.Title = "لیست حواله های انبار";

}
<!-- Modal -->
<div class="modal fade" id="DeleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                آیا مطمئن هستید؟
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                <button type="button" class="btn btn-primary" id="confirmDelete">بله حتما</button>
            </div>
        </div>
    </div>
</div>
@* <button type="button" data-modal- class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"> *@
@*     Launch demo modal *@
@* </button> *@
@* <button type="button" class="btn btn-danger"  data-toggle="modal" data-target="#DeleteConfirmationModal" *@
@* onclick="confirmDeleteModal('10')">Delete Item id 10</button> *@
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div id="accordion-one" class="accordion accordion-primary">
                        <div class="accordion__item">
                            <div class="accordion__header rounded-lg" data-toggle="collapse" data-target="#default_collapseOne">
                                <span class="accordion__header--text">جستجوی پیشرفته</span>

                                <i class="fa fa-plus " style="float: left"></i>
                            </div>
                            <div id="default_collapseOne" class="collapse accordion__body " data-parent="#accordion-one">
                                @using (Html.BeginForm(FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <div style="margin-top: 30px;" class="row form-material">
                                        <div class="col-xl-3 col-xxl-3 col-md-2 mb-3">
                                            <p class="mb-1">شماره فاکتور</p>
                                            <input autocomplete="off" autofill="off" type="text" class="form-control" placeholder="شماره فاکتور" value="" id="FactorNumber" name="FactorNumber">
                                        </div>
                                        <div class="col-xl-3 col-xxl-3 col-md-2 mb-3">
                                            <p class="mb-1">طرف حساب</p>
                                            @Html.DropDownList("BusinnessPartnerId", (IEnumerable<SelectListItem>)ViewBag.BusinnessPartnerList, "انتخاب کنید", new { @class = "form-control" })
                                        </div>
                                        <div class="col-xl-3 col-xxl-3 col-md-2 mb-3">
                                            <p class="mb-1">تحویل گیرنده</p>
                                            <input autocomplete="off" autofill="off" type="text" class="form-control" placeholder="تحویل گیرنده" value="" id="HamrahName" name="HamrahName">
                                        </div>
                                        <div class="col-xl-3 col-xxl-3 col-md-2 mb-3">
                                            <p class="mb-1">تاریخ فاکتور از</p>
                                            <input autocomplete="off" autofill="off" type="text" class="form-control" value="" id="FactorDateFrom" name="FactorDateFrom">
                                        </div>
<div class="col-xl-3 col-xxl-3 col-md-2 mb-3">
                                            <p class="mb-1">تاریخ فاکتور تا</p>
                                            <input autocomplete="off" autofill="off" type="text" class="form-control" value="" id="FactorDateTo" name="FactorDateTo">
                                        </div>


                                        <div class="col-xl-3 col-xxl-3 col-md-2 mb-3 vertical-center">
                                            <p class="mb-1">&nbsp;</p>

                                            <button type="button" onclick="SearchInvoice(1);" value="sumbit" name="sumbit" style="margin-right: 15px;" class="btn btn-primary mb-3">اعمال فیلتر</button>
                                            <a href="@Url.Action("InvoiceList")" style="margin-right: 15px;" class="btn btn-outline-primary mb-3">حذف فیلتر</a>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3 class="card-title text-white">لیست گروه کالا</h3>
                </div>
                <div id="InvoiceList">
                    @{
                        Html.RenderPartial("_ListInvoice", Model);
                    }
                </div>

                <!-- /.card-body -->

            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row (main row) -->
</div>

<div>

</div>
