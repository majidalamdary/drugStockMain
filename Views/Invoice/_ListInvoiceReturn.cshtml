@using DrugStockWeb.Helper
@using DrugStockWeb.Models.Constanct
@using DrugStockWeb.Models.Constancts
@using DrugStockWeb.Models.Invoice
@using DrugStockWeb.Utitlities
@using Microsoft.AspNet.Identity
@model List<DrugStockWeb.Models.Invoice.InvoiceReturn>
<div class="card-body p-0">
    <table class="table table-striped table-responsive-sm text-center">
        <thead>
            <tr>
                <th>توضیحات</th>
                <th>انبار مرجوعی</th>
                <th>شماره فاکتور</th>
                <th>تاریخ حواله</th>
                <th>تاریخ مرجوع</th>
                <th>خریدار</th>
                <th>جمع مبلغ(قیمت فروش)</th>
                <th>کاربر ایجاد کننده</th>
                <th>وضعیت</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@(item.Invoice.Describe )</td>
                    <td>@(item.Store.Title )</td>
                    <td>@(item.Invoice.FactorNumber )</td>
                    <td>@item.Invoice.FactorDate.ToShamsi(PersianDateTimeFormat.Date)</td>
                    <td>@item.InvoiceReturnDate.ToShamsi(PersianDateTimeFormat.Date)</td>
                    <td>@(item.Invoice.BusinnessPartner.FirstName +" "+item.Invoice.BusinnessPartner.LastName +(item.Invoice.BusinnessPartner.BusinnessPartnerGroup.BusinnessPartnerLegalTypeId !=BusinnessPartnerLegalTypeValues.Haghighi ? "("+item.Invoice.BusinnessPartner.CompanyName + ")" : "") )</td>
                    <td>
                        @{
                            long sumBuy = 0;
                            var sum = (item.InvoiceDetailReturns.AsEnumerable() ?? Array.Empty<InvoiceDetailReturn>()).GroupBy(p => p.InvoiceReturnId).Select(a => new
                            {
                                amount = a.Sum(p => (p.Count * p.InvoiceDetail.SellPrice))
                            }).ToList();
                            if (sum.Count > 0)
                            {
                                sumBuy = sum[0].amount;
                            }
                        }
                        @sumBuy.ToString().Cur()
                    </td>

                    <td>@item.CreatorUser.FirstName @item.CreatorUser.LastName</td>

                    <td>
                        @{
                            if (!item.IsConfirmed)
                            {
                                <label>درانتظار تائید</label>
                            }
                            else if (item.IsDisposed)
                            {
                                <label>امحاء شده</label>
                            }
                            else if(item.Store.IsForDisposable)
                            {
                                <label>تائید شده (درانتظار امحاء)</label>
                            }
                            else
                            {
                                <label>تائید و رسید انبار صادر شده</label>

                            }

                        }
                    </td>




                    <td>
                        <div>
                            <a href="@Url.Action("ReturnInvoice",new {invoiceId= item.InvoiceId, invoiceReturnId = item.Id })"  title="ویرایش حواله مرجوعی"  class="btn btn-success shadow btn-xs sharp mr-1"><i class="fa fa-edit" style="cursor: pointer; color: white"></i></a>

                            @{
                                if (!item.IsConfirmed && PermissionHelper.HasPermission(PermissionValue.ConfirmInvoiceReturn,User.Identity.GetUserId()))
                                {
                                    <a data-toggle="modal" data-target="#DeleteConfirmationModal" title="تائید حواله مرجوعی" onclick="confirmReturnConfirmationModal('@item.Id')" class="btn btn-info shadow btn-xs sharp"><i style="color: #fff; cursor: pointer" class="fa fa-check"></i></a>
                                }
                                else if (!item.IsDisposed && PermissionHelper.HasPermission(PermissionValue.ConfirmInvoiceDisposal, User.Identity.GetUserId()) && item.Store.IsForDisposable)
                                {
                                    <a data-toggle="modal" data-target="#DeleteConfirmationModal" title="امحا حواله مرجوعی" onclick="confirmDisposalModal('@item.Id')" class="btn btn-danger shadow btn-xs sharp"><i style="color: #fff; cursor: pointer" class="fa fa-burn"></i></a>
                                }

                            }
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <nav class="table-responsive">
            <ul class="pagination justify-content-center d-flex flex-wrap">
                @if (ViewBag.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" onclick="SearchInvoiceReturn(1)">اولین</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" onclick="SearchInvoiceReturn(@(ViewBag.Page - 1))">قبلی</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.PageCount; i++)

                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" onclick="SearchInvoiceReturn(@i);">@i</a>
                    </li>
                }

                @if (ViewBag.Page < ViewBag.PageCount)
                {
                    <li class="page-item">
                        <a class="page-link" onclick="SearchInvoiceReturn(@(ViewBag.Page + 1))">بعدی</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" onclick="SearchInvoiceReturn(@(ViewBag.PageCount))">آخرین</a>
                    </li>
                }
            </ul>
        </nav>
    </div>


</div>

