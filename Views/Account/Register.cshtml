@model DrugStockWeb.ViewModels.Account.RegisterViewModel

@{
    ViewBag.Title = "ثبت کاربر";
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "form-horizontal", autocomplete = "off", id = "CreateStoreForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(p => p.Id)
    <style>
        .required:before {
            content: "* ";
            color: red;
        }
    </style>
    <div class="panel panel-default">



        <div class="panel-heading">
            <div class="row">

                <div class="col-md-12">

                    <table class="model-state">
                        @foreach (var item in ViewContext.ViewData.ModelState)
                        {
                            if (item.Value.Errors.Any())
                            {
                                <tr>
                                    @if (@item.Key == "public")
                                    {
                                        <td>
                                            <div class="alert alert-danger  margin-bottom-0"
                                                 style="margin-bottom: 5px;">
                                                @(string.Join("; ", item.Value.Errors.Select(x => x.ErrorMessage)))
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        }
                    </table>

                    <br>
                </div>
            </div>

        </div>
    </div>
    <div class="panel-body">
        @* <ul class="nav nav-tabs"> *@
        @*     <li class="active"> *@
        @*         <a href="#baseInfo" data-toggle="tab">اطلاعات پایه</a> *@
        @*     </li> *@
        @* </ul> *@


        <div class="tab-content">
            <div class="tab-pane active" id="baseInfo">
                <div class="row" style="margin-top: 15px; padding-right: 30px;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group ">
                                @Html.LabelFor(p => p.UserName, new { @class = "control-label col-md-3 required" })

                                <div>
                                    @Html.TextBoxFor(p => p.UserName, new { @class = "form-control " })
                                    @Html.ValidationMessageFor(p => p.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group ">
                                    @Html.LabelFor(p => p.DepartmentId, new { @class = "control-label col-md-3 required" })

                                    <div>
                                        @Html.DropDownListFor(p => p.DepartmentId, Model.DepartmentList, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(p => p.DepartmentId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group ">
                                    @Html.LabelFor(p => p.RoleId, new { @class = "control-label col-md-3 required" })

                                    <div>
                                        @Html.DropDownListFor(p => p.RoleId, Model.RoleList, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(p => p.RoleId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group ">
                                    @Html.LabelFor(p => p.FirstName, new { @class = "control-label col-md-3 required" })

                                    <div>
                                        @Html.TextBoxFor(p => p.FirstName, new { @class = "form-control " })
                                        @Html.ValidationMessageFor(p => p.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group ">
                                    @Html.LabelFor(p => p.LastName, new { @class = "control-label col-md-3 required" })

                                    <div>
                                        @Html.TextBoxFor(p => p.LastName, new { @class = "form-control " })
                                        @Html.ValidationMessageFor(p => p.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group ">
                                    @Html.LabelFor(p => p.Mobile, new { @class = "control-label col-md-3 " })

                                    <div>
                                        @Html.TextBoxFor(p => p.Mobile, new { @class = "form-control " })
                                        @Html.ValidationMessageFor(p => p.Mobile, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group ">
                                    @Html.LabelFor(p => p.Email, new { @class = "control-label required" })
                                    <span>(جهت احزار هویت دومرحله ای)</span>
                                    <div>
                                        @Html.TextBoxFor(p => p.Email, new { @class = "form-control " })
                                        @Html.ValidationMessageFor(p => p.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group ">
                                    @Html.LabelFor(p => p.Password, new { @class = "control-label col-md-3 required" })

                                    <div>
                                        @Html.PasswordFor(p => p.Password, new { @class = "form-control " })
                                        @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group ">
                                    @Html.LabelFor(p => p.ConfirmPassword, new { @class = "control-label col-md-3 required" })

                                    <div>
                                        @Html.PasswordFor(p => p.ConfirmPassword, new { @class = "form-control " })
                                        @Html.ValidationMessageFor(p => p.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>


        </div>
        <div class="panel-footer">
            <div style="float: right !important; margin-right: 40px;">
                @* ReSharper disable once UnknownCssClass *@
                <button type="submit" autocomplete="off" onclick="AjaxForm.CustomSubmit(this, 'CreateVehicleForm')" data-loading-text="در حال ارسال اطلاعات" class="btn btn-success btn-md">
                    ذخیره
                </button>
                @* ReSharper disable once UnknownCssClass *@
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-md">انصراف</a>
            </div>
            <div class="clearfix"></div>
        </div>


    </div>
}

