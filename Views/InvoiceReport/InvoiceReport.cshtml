@{
    Html.RenderPartial("_sweetAlert");
}

<script language="javascript">
    $("#InvoiceDateFrom").persianDatepicker({
        formatDate: "YYYY/MM/DD",
        cellWidth: 40,
        cellHeight: 40,
        fontSize: 12,
        selectedBefore: 1
    });
    $("#InvoiceDateFrom").val("");
    $("#InvoiceDateTo").persianDatepicker({
        formatDate: "YYYY/MM/DD",
        cellWidth: 40,
        cellHeight: 40,
        fontSize: 12,
        selectedBefore: 1
    });
    $("#InvoiceDateTo").val("");
    $('#ProductId').select2({
        placeholder: 'کالا را انتخاب کنید',

        allowClear: true
    });
</script>