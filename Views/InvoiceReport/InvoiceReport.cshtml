<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">


                    <div id="default_collapseOne" class=" accordion__body " data-parent="#accordion-one">
                        @using (Html.BeginForm(FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div style="margin-top: 30px;" class="row form-material">
                                <div class="col-xl-3 col-xxl-3 col-md-6 mb-3">
                                    <p class="mb-1">نام انبار</p>
                                    @Html.DropDownListFor(p => p.StoreId, Model.StoreList, new { @onchange = "FillProduct()", @class = "form-control" })
                                </div>
                                <div class="col-xl-3 col-xxl-3 col-md-6 mb-3">
                                    <p class="mb-1">کالا</p>
                                    @Html.DropDownListFor(p => p.ProductId, Model.ProductList, "انتخاب کالا", new { @class = "form-control" })
                                </div>
                                <div class="col-xl-3 col-xxl-3 col-md-2 mb-3">
                                    <p class="mb-1">تاریخ رسید از</p>
                                    <input autocomplete="off" autofill="off" type="text" class="form-control" value="" id="InvoiceDateFrom" name="InvoiceDateFrom">
                                </div>
                                <div class="col-xl-3 col-xxl-3 col-md-2 mb-3">
                                    <p class="mb-1">تاریخ رسید تا</p>
                                    <input autocomplete="off" autofill="off" type="text" class="form-control" value="" id="InvoiceDateTo" name="InvoiceDateTo">
                                </div>
                                <div class="col-xl-4 col-xxl-5 col-md-6 mb-3">
                                    <div>
                                        <p class="mb-1"> </p>

                                        <button type="button" onclick="SearchInvoiceReport(1);" value="sumbit" name="sumbit" style="margin-right: 15px;" class="btn btn-primary mb-3">اعمال فیلتر</button>
                                        <a href="@Url.Action("InvoiceReport")" style="margin-right: 15px;" class="btn btn-outline-primary mb-3">حذف فیلتر</a>
                                        
                                        <a onclick="PrintInvoiceReport(1);"  href="#" style="margin-right: 15px;" class="btn btn-success mb-3"><i class="fa fa-print"></i> چاپ لیست</a>

                                    </div>
                                </div>


                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3 class="card-title text-white">لیست موجودی دارو و لوازم</h3>
                </div>
                <div id="InvoiceReportList">
                    @{
                        Html.RenderPartial("_invoiceDetailReport", Model.InvoiceDetailReportList);
                    }
                </div>

                <!-- /.card-body -->

            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row (main row) -->
</div>

<div>

</div>
