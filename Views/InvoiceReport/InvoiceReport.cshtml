@model DrugStockWeb.ViewModels.InvoiceReport.InvoiceReportViewModel

@{
    ViewBag.Title = "گزارش حواله های انبار";

}
<!-- Modal -->
@* <button type="button" data-modal- class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"> *@
@*     Launch demo modal *@
@* </button> *@
