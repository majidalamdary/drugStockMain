<script language="javascript">

    $("#LogDateFrom").persianDatepicker({
        formatDate: "YYYY/MM/DD",
        cellWidth: 40,
        cellHeight: 40,
        fontSize: 12,
        selectedBefore: 1
    });
    $("#LogDateFrom").val("");
    $("#LogDateTo").persianDatepicker({
        formatDate: "YYYY/MM/DD",
        cellWidth: 40,
        cellHeight: 40,
        fontSize: 12,
        selectedBefore: 1
    });
    $("#LogDateTo").val("");

    $('#LogTypeId').select2({
        allowClear: true
    });

    function showLogDetails(logId) {
        $.ajax({
            url: '/Log/Details', // Replace with your actual controller and action
            type: 'GET',
            data: { id: logId },
            success: function (data) {
                $('#logDetailsBody').html(data);
                $('#logDetailsModal').modal('show');
            },
            error: function () {
                $('#logDetailsBody').html('<p class="text-danger">خطا در دریافت اطلاعات</p>');
                $('#logDetailsModal').modal('show');
            }
        });
    }

</script>

