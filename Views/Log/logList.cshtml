                <button type="button" class="close" data-dismiss="modal" aria-label="بستن">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="logDetailsBody">
                <!-- Log details will be loaded here -->
            </div>
        </div>
    </div>
</div>
