@model DrugStockWeb.ViewModels.Store.CreateStoreViewModel

@{
    ViewBag.Title = "ایجاد حواله جدید";
}
@using (Html.BeginForm("CreateStore", "Store", FormMethod.Post, new { role = "form", @class = "form-horizontal", autocomplete = "off", id = "CreateStoreForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(p => p.Id)
    <style>
        .required:before {
            content: "* ";
            color: red;
        }
    </style>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">

                <div class="col-md-12">

                    <table class="model-state">
                        @foreach (var item in ViewContext.ViewData.ModelState)
                        {
                            if (item.Value.Errors.Any())
                            {
                                <tr>
                                    @if (@item.Key == "public")
                                    {
                                        <td>
                                            <div class="alert alert-danger  margin-bottom-0"
                                                 style="margin-bottom: 5px;">
                                                @(string.Join("; ", item.Value.Errors.Select(x => x.ErrorMessage)))
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        }
                    </table>

                    <br>
                </div>
            </div>

        </div>

        <div class="panel-body">
            @* <ul class="nav nav-tabs"> *@
            @*     <li class="active"> *@
            @*         <a href="#baseInfo" data-toggle="tab">اطلاعات پایه</a> *@
            @*     </li> *@
            @* </ul> *@


            <div class="tab-content">
                <div class="tab-pane active" id="baseInfo">
                    <div class="row" style="margin-top: 15px; padding-right: 30px;">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group ">
                                    @Html.LabelFor(p => p.Title, new { @class = "control-label col-md-3 required" })

                                    <div>
                                        @Html.TextBoxFor(p => p.Title, new { @class = "form-control " })
                                        @Html.ValidationMessageFor(p => p.Title, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(p => p.InCharge, new { @class = "control-label col-md-3 " })
                                    <div>
                                        @Html.TextBoxFor(p => p.InCharge, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(p => p.InCharge, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(p => p.IsForDisposable, new { @class = "control-label col-md-3 " })
                                    <div>
                                        @Html.DropDownListFor(model => model.IsForDisposable, new List<SelectListItem>()
                                        {
                                            new SelectListItem() { Text = "بله", Value = "True" },
                                            new SelectListItem() { Text = "خیر", Value = "False",Selected = true}
                                        }, new { @id = "flag", @class = "form-control" })                                        @Html.ValidationMessageFor(p => p.IsForDisposable, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(p => p.IsUsagePeriodForce, new { @class = "control-label col-md-3 " })
                                    <div>
                                        @Html.DropDownListFor(model => model.IsUsagePeriodForce, new List<SelectListItem>()
                                        {
                                            new SelectListItem() { Text = @"بله", Value = "True" },
                                            new SelectListItem() { Text = @"خیر", Value = "False",Selected = true}
                                        }, new { @id = "flag", @class = "form-control" })                                        @Html.ValidationMessageFor(p => p.IsUsagePeriodForce, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(p => p.ProvinceId, new { @class = "control-label col-md-3 required" })
                                    <div>
                                        @Html.DropDownListFor(p => p.ProvinceId, Model.ProvinceList, "انتخاب استان", new { @onchange = "FillCity()", @id = "DropDownProvinceId", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ProvinceId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(p => p.CityId, new { @class = "control-label col-md-3 required" })
                                    <div>
                                        @Html.DropDownListFor(p => p.CityId, Model.CityList, "انتخاب شهر", new { @onchange = "FillPayloadReserveType()", @id = "DropDownCityId", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


        </div>
        <div class="panel-footer">
            <div style="float: right !important; margin-right: 40px;">
                @* ReSharper disable once UnknownCssClass *@
                <button type="submit" autocomplete="off" onclick="AjaxForm.CustomSubmit(this, 'CreateVehicleForm')" data-loading-text="در حال ارسال اطلاعات" class="btn btn-success btn-md">
                    ذخیره
                </button>
                @* ReSharper disable once UnknownCssClass *@
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-md">انصراف</a>
            </div>
            <div class="clearfix"></div>
        </div>


    </div>
    {
        Html.RenderPartial("_sweetAlert");
    }


}

